<Bindings>
   <Binding name="VGUIDE_TOGGLE" description="Toggle Vanilla Guide" header="VGUIDE">
      <!-- VGuide:ToggleMainWindow() -->
      if VGuide.MainFrame.tWidgets.frame_MainFrame:IsVisible() then
         VGuide.MainFrame.tWidgets.frame_MainFrame:Hide()
      else
         VGuide.MainFrame.tWidgets.frame_MainFrame:Show()
      end
   </Binding>
   <Binding name="VGUIDE_PREV_STEP" description="Go to the Prev Step">
      <!-- VGuide:PrevStep() -->
      VGuide:PrevStep()
      VGuide:RefreshData()
   </Binding>
   <Binding name="VGUIDE_NEXT_STEP" description="Go to the Next Step">
      <!-- VGuide:NextStep() -->
      VGuide:NextStep()
      VGuide:RefreshData()
   </Binding>
   <Binding name="VGUIDE_PREV_GUIDE" description="Go to the Prev Guide">
      <!-- VGuide:PrevGuide() -->
      VGuide:PrevGuide()
      VGuide:RefreshData()
   </Binding>
   <Binding name="VGUIDE_NEXT_GUIDE" description="Go to the Next Guide">
      <!-- VGuide:NextGuide() -->
      VGuide:NextGuide()
      VGuide:RefreshData()
   </Binding>
</Bindings>